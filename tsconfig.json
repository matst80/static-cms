{
	"include": ["src"],
	"compilerOptions": {
    "lib": ["es2022","DOM"],
		"rootDir": "src",
    "module": "commonjs",
    "target": "es2022",
		"outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}